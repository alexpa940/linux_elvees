	status = "okay";

	gpio-line-names = "", "SPIc_CLK", "SPIc_nCS1", "SPIc_nCS0",
	"SPIc_MISO", "SPIc_MOSI", "", "SWITCH_SPI", "SWITCH_SPI_BTN",
	"AUD_LDOEN", "", "", "", "", "", "", "", "", "", "", "", "", "",
	"", "", "", "", "", "", "", "", "" ;
