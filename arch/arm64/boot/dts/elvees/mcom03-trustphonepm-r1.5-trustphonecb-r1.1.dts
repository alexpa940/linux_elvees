&mfbsp1_gpio {
	status = "okay";

	gpio-line-names = "", "CUTTER_nRST", "FLASH_SYNC", "FLASH_GPIO",
	"RGB_INDC_R", "RGB_INDC_G", "RGB_INDC_B", "LTE_nRESET",
	"GPS_nRESET", "FP_nRST", "", "", "", "", "", "", "", "", "", "",
	"", "", "", "", "", "", "", "", "", "", "", "" ;
